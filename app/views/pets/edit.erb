<form class="" action="/pets/<%=@pet.id%>" method="post">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name">

  <br></br>

  <label>Choose an existing pet:</label>

  <br></br>

  <%Owner.all.each do |pet|%>
  <input type="checkbox" name="[pet][owner_ids][]" value="<%= owner.id%>" id="<%= owner.id%>" <%='checked' if @pet.owner.include?(owner) %>>
  <%=owner.name%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br></br>
  <input type="submit" value="Update Pet">
</form>
